<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_all_users_receiver"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:visibility="visible"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/imageView_all_users_receiver_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView_allusers_chat_receiver_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/cv_all_users_receiver"
                android:background="@drawable/background_receiver"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:text="This is from the receiver."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_allusers_chat_sender_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@+id/cv_all_users_sender"
                android:background="@drawable/background_sender"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:text="This is from the sender."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="gone" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_all_users_sender"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:visibility="visible"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/imageView_all_users_sender_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>